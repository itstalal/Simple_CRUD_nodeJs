<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .cart-container {
            margin-top: 50px;
        }
        .cart-item {
            background-color: #f8f9fa;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .cart-item h5 {
            margin-bottom: 0;
        }
        .remove-btn {
            cursor: pointer;
        }
    </style>
</head>
<body>

    <header class="bg-primary text-white py-3 fixed-top">
        <div class="container">
            <h1 class="h3">My Cart</h1>
            <nav>
                <ul class="nav">
                    <!-- <li class="nav-item"><a href="/" class="nav-link text-white">Home</a></li> -->
                    <li class="nav-item"><a href="/client" class="nav-link text-white">Products</a></li>
                    <li class="nav-item"><a href="/client/cart" class="nav-link text-white">MyCart</a></li>
                    <li class="nav-item"><a href="/logout" class="nav-link text-white">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <br><br><br><br>
    <div class="container cart-container">
        

        <% if (cart && cart.items.length > 0) { %>
            <ul class="list-group">
                <% cart.items.forEach(item => { %>
                    <li class="cart-item list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5><%= item.productId.name %></h5>
                            <p class="mb-0">Quantity: <%= item.quantity %></p>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-primary rounded-pill me-2">Price: $<%= item.productId.price * item.quantity %></span>
                            <form action="/client/remove-from-cart/<%= item.productId._id %>" method="POST">
                                <button type="submit" class="btn btn-danger btn-sm remove-btn">Remove</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="text-center">Your cart is empty.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
